@model ParkingProvider.Portal.Model.QRModel

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-iYQeCzEYFbKjA/T2uDLTpkwGzCiq6soy8tYaI1GyVh/UjpbCx/TYkiZhlZB6+fzT" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-u1OknCvxWvY5kfmNBILK2hRnQC3Pr17a+RTT6rIHI7NnikvbZlHgTPOOmMi466C8" crossorigin="anonymous"></script>


</head>
<body>

    <h4>QRModel</h4>
    <hr />
    @using (@Html.BeginForm("Index", "Home", FormMethod.Post))
    {
        <div class="form-group">
            <label for="parkingProvider">Parking Provider</label>
             @Html.DropDownList("ParkingProvider", Model.ParkingProviderList, "Select Parking Provider", new {@class="form-control"})
        </div>

        <div class="form-group">
            <label for="parkingProvider">Sub Location</label>
             @Html.DropDownList("SubLocation", Model.SubLocationList, "Select Sub Location", new {@class="form-control"})
        </div>
        <div class="form-group">
            <label for="parkingProvider">Sub Location Type</label>
              @Html.DropDownList("SubLocationType", new List<SelectListItem>
                      {
                      new SelectListItem { Text = "Entry", Value = "Entry"},
                      new SelectListItem { Text = "Return", Value = "Return"},
                      }, "Select Sub Location Type", new {@class="form-control"})
        </div>
        <div class="form-group">
            <label for="parkingProvider">Activity Code</label>
             @Html.DropDownList("ActivityCode", Model.ActivityCodeList, "Select Activity Code", new {@class="form-control"})
        </div>
        <div class="form-group">
            <label for="parkingProvider">Parking Spot Id</label>
             @Html.DropDownList("ParkingSpotId", Model.ParkingSpotIdList, "Select Parking Spot", new {@class="form-control"})
        </div>

        <br />
        <input type="submit" value="Generate"/>
        <br />

        @if (!string.IsNullOrEmpty(Model.QRString))
        {
            <span> Simple text: </span>
            @Model.QRString
            <br><span> Encrypted text: </span>@Model.EncryptedData
            <img src="@TempData["QRCodeImage"]" />
        }
    }
</body>
</html>
